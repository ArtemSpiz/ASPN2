{% schema %}
{
  "name": "Team Section",
  "settings": [

  ],
  "blocks": [
    {
      "type": "team_member",
      "name": "Team Member",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Team Member Name"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role",
          "default": "Team Member Role"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Team member's description or bio goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Team Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

