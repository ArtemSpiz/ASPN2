          src="{{ block.settings.image | img_url: 'master' }}"
          alt="{{ block.settings.name }}"
        >
        <div class="team-down">
          <div class="team-foto-top">
            <div class="team-name">{{ block.settings.name }}</div>
            <div class="team-spec">{{ block.settings.role }}</div>
