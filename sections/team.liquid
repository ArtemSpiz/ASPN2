        </div>
      </div>
      <!-- Задня сторона -->
      <div class="team-foto-back">
        <div class="back-content">
          <div class="back-team-top">
            <div class="back-team-texts">
            <div class="back-team-image">
              <img class="back-team-img" src="../assets/back-team.png">
              </div>
              <div class="back-team-info">
