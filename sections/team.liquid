      </button>
      </div>
  </div>
</section>

<script>
     document.addEventListener('DOMContentLoaded', () => {
  const teamFotos = document.querySelector('.team-fotos');
  const leftArrow = document.querySelector('.slider-arrow--left');
  const rightArrow = document.querySelector('.slider-arrow--right');

  leftArrow.addEventListener('click', () => {
    teamFotos.scrollBy({
      left: -300, // Adjust the scroll amount as needed
      behavior: 'smooth'
    });
  });

  rightArrow.addEventListener('click', () => {
    teamFotos.scrollBy({
      left: 300, // Adjust the scroll amount as needed
      behavior: 'smooth'
    });
  });
// Flip to back
const flipButtons = document.querySelectorAll('.flip-button');
flipButtons.forEach(flipButton => {
  flipButton.addEventListener('click', () => {
    const teamFoto = flipButton.closest('.team-foto');
    const teamFotoFront = teamFoto.querySelector('.team-foto-front');
    const teamFotoBack = teamFoto.querySelector('.team-foto-back');

    teamFotoFront.classList.add('hide');
    teamFotoBack.classList.add('show');
  });
});

// Flip to front
const flipBackButtons = document.querySelectorAll('.flip-button-back');
flipBackButtons.forEach(flipButtonBack => {
  flipButtonBack.addEventListener('click', () => {
    const teamFoto = flipButtonBack.closest('.team-foto');
    const teamFotoFront = teamFoto.querySelector('.team-foto-front');
    const teamFotoBack = teamFoto.querySelector('.team-foto-back');

    teamFotoFront.classList.remove('hide');
    teamFotoBack.classList.remove('show');
  });
});


})
</script>

